{% extends 'base.html.twig' %}

{% block title %}ConnexionController!{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error }}
        </div>
    {% endif %}

    <form action="{{ path('login_page') }}" method="post">
        <div class="form-group">
            <label for="username">Nom d'utilisateur:</label>
            <input type="text" id="username" name="_username" required class="form-control">
        </div>

        <div class="form-group">
            <label for="password">Mot de passe:</label>
            <input type="password" id="password" name="_password" required class="form-control">
        </div>

        <div class="flexdiv">
            <button class="logout-btn2" type="submit">Se connecter</button>
            <a href="{{ path('inscription_page') }}" class="logout-btn3">S'inscrire</a>
        </div>
    </form>
{% endblock %}
